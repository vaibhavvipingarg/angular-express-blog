extends layout

block body
  div.container
    div.banner
        .banner-icon
          h1
            a(href='/')
              span.fa.fa-lock eBazaar
        .banner-search(ng-controller='IndexCtrl')
          input(ng-model='query' type='text' placeholder='Search for item or shop' autofocus).market-search
          div(ng-click='submitSearch()') Go
          div(ng-show='results.length > 0').search-results
            div(ng-repeat='result in results' ng-click='getProduct(result._id)')
              h4 {{result.name}}   
        .banner-actions
          a(href='/addShop').btn.btn-default
            span.fa.fa-user Add Shop
          a(href='/login').btn.btn-default
            span.fa.fa-user Login
          a(href='/signup').btn.btn-default
            span.fa.fa-user Signup
          a(href='/marketPlace').btn.btn-default
            span.fa.fa-user Market Place
          a(href='/logout').btn.btn-default
            span.fa.fa-user Logout

    div.text-center
        a(href='/marketPlace') Goto MarketPlace

    div(ng-view).wrapper

  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/controllers.js')


